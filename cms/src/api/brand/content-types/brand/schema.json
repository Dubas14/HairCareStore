{
  "kind": "collectionType",
  "collectionName": "brands",
  "info": {
    "singularName": "brand",
    "pluralName": "brands",
    "displayName": "Brand",
    "description": "Product brands for the storefront"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "medusaHandle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images", "videos"]
    },
    "accentColor": {
      "type": "string",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "default": "#8B5CF6"
    },
    "history": {
      "type": "richtext"
    },
    "countryOfOrigin": {
      "type": "string"
    },
    "foundedYear": {
      "type": "integer"
    },
    "website": {
      "type": "string"
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "shared.benefit-item"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
