{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "singularName": "banner",
    "pluralName": "banners",
    "displayName": "Banner"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "position"
            },
            "home"
          ]
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "link": {
      "type": "string"
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "home",
        "category",
        "promo"
      ]
    },
    "order": {
      "type": "integer"
    },
    "isActive": {
      "type": "boolean"
    },
    "mediaType": {
      "type": "enumeration",
      "enum": [
        "image",
        "video"
      ]
    }
  }
}
