# Copy this file to .env.local on the server and fill in the values

NODE_ENV=production

# Public URL of the site (no trailing slash)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# PostgreSQL connection string
PAYLOAD_DATABASE_URL=postgres://payload_user:strong_password_here@localhost:5432/payload

# Payload secret key (minimum 32 characters, generate with: openssl rand -hex 32)
PAYLOAD_SECRET=change-me-to-a-random-string-at-least-32-chars

# Port for Next.js server (default: 3000 in production)
PORT=3000
